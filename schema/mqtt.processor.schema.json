{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Schema for MQTTP1Processor",
    "type": "object",
    "properties": {
        "type": {
            "type": "string",
            "enum": ["mqtt"]
        },
        "broker": {
            "type": "string"
        },
        "port": {
            "type": "number"
        },
        "protocol": {
            "type": "string",
            "enum": ["MQTTv31", "MQTTv311", "MQTTv5"]
        },
        "clientId": {
            "type": "string"
        },
        "websockets": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "path": {
                    "type": "string"
                },
                "headers": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "enabled",
                "path"
            ],
            "additionalProperties": false
        },
        "username": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "tls": {
            "type": "object",
            "properties": {
                "useTLS": {
                    "type": "boolean"
                },
                "setTLSInsecure": {
                    "type": "boolean"
                },
                "rootCAFileName": {
                    "type": "string"
                }
            },
            "required": [
                "useTLS"
            ]
        },
        "topics": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    },
    "required": [
        "type",
        "broker",
        "topics"
    ],
    "additionalProperties": false
}